.modal-header
  %button{ class: 'close', data: { dismiss: :modal }, 'aria-hidden' => true } &times;
  %h3 Login
.modal-body
  = form_for User.new, as: :user, url: session_path(:user) do |f|
    = f.email_field :email, class: 'input-block-level', placeholder: 'Email address'

    = f.password_field :password, class: 'input-block-level', placeholder: 'Password'

    - if Devise.mappings[:user].rememberable?
      %label.checkbox
        = f.check_box :remember_me
        = f.label :remember_me
.modal-footer
  %button{ data: { dismiss: :modal }, class: 'btn' } Close
  = submit_tag 'Login', class: 'btn btn-primary', form: 'new_user'
